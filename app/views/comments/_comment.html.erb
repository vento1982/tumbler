<div class="component-fluid">
	<div class="row">
		<div class="col-md-12">
			<p><strong><%= comment.name %></strong> | 
				<% if user_signed_in? %>
					<%= link_to "Delete", [comment.post, comment], method: :delete, data: { confirm: "Are You sure?" }, class: "btn btn-danger btn-xs" %>
				<% end %>
			</p>
			<p><%= comment.body %></p>
			<p>Created <%= time_ago_in_words(comment.created_at) %> ago</p>
		</div>
	</div>
</div>
