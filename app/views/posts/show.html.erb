<div class="container-fluid">
	<div class="row">
		<div class="col-md-10 col-md-offset-1 text-justify">
			<h1><%= @post.title %></h1>
			<p>Submitted <%= time_ago_in_words(@post.created_at) %> ago | 
			<%= link_to "Edit", edit_post_path(@post), class: "btn btn-warning  btn-xs" %>
			<%= link_to "Destroy", post_path(@post), method: :delete, data: { confirm: "Are You sure?" }, class: "btn btn-danger  btn-xs" %>
			</p>
			<p><%= @post.body %></p>
		</div>
	</div>
</div>